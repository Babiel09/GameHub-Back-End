generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users{
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name String 
  email String @unique
  pass String @unique
  gender Gender
}

model Games{
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name String
  description String
  type Tags
}

enum Gender {
  Homem
  Mulher
}

enum Tags {
Action

Adventure

RPG

Cart

Simulation

Strategy

Sports

WithFriends

ScientificFiction

RogueLike
}
